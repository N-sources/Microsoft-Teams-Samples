{
  "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
  "manifestVersion": "1.16",
  "id": "${{TEAMS_APP_ID}}",
  "version": "1.0.0",
  "packageName": "com.custom.tab",
  "developer": {
    "name": "Microsoft",
    "websiteUrl": "https://${{TAB_DOMAIN}}",
    "privacyUrl": "https://${{TAB_DOMAIN}}/privacy",
    "termsOfUseUrl": "https://${{TAB_DOMAIN}}/termsofuse"
  },
  "name": {
    "short": "Channel Group Tab",
    "full": "Channel Group Tab"
  },
  "description": {
    "short": "Sample app for creating custom channel and group tabs with ASP.NET Core.",
    "full": "This sample application demonstrates how to build custom channel and group tabs in Microsoft Teams using ASP.NET Core and MVC."
  },
  "icons": {
    "outline": "outline.png",
    "color": "color.png"
  },
  "accentColor": "#D85028",
  "configurableTabs": [
    {
      "configurationUrl": "https://${{TAB_DOMAIN}}/tab",
      "canUpdateConfiguration": true,
      "scopes": [
        "groupchat",
        "team"
      ]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "*.ngrok-free.app",
    "${{TAB_DOMAIN}}"
  ]
}