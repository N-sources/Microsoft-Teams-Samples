{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
  "manifestVersion": "1.16",
  "version": "1.0.0",
  "id": "{{Microsoft-App-Id}}",
  "packageName": "com.microsoft.teams.sentimentanalysis",
  "developer": {
    "name": "Microsoft",
    "websiteUrl": "https://www.microsoft.com",
    "privacyUrl": "https://www.microsoft.com/privacy",
    "termsOfUseUrl": "https://www.microsoft.com/termsofuse"
  },
  "name": {
    "short": "ME-ai-sentiment-analysis-C#",
    "full": "Sentiment analysis using message extension."
  },
  "description": {
    "short": "Analyze sentiment of Teams chat messages using Azure Open AI and messaging.",
    "full": "This sample demonstrates how to analyze the sentiment of chat messages in Teams using a messaging extension powered by Azure Open AI."
  },
  "icons": {
    "outline": "outline.png",
    "color": "color.png"
  },
  "accentColor": "#60A18E",
  "bots": [
    {
      "botId": "{{Microsoft-App-Id}}",
      "scopes": [
        "personal",
        "team"
      ],
      "isNotificationOnly": false
    }
  ],
  "composeExtensions": [
    {
      "botId": "{{Microsoft-App-Id}}",
      "canUpdateConfiguration": true,
      "commands": [
        {
          "id": "me-sentiment-ai",
          "description": "send sentiment for any text messages posted in Microsoft Teams chat",
          "title": "Sentiment analysis",
          "type": "action",
          "fetchTask": true,
          "context": [ "message" ]
        }
      ]
    }
  ],
  "permissions": [ "identity", "messageTeamMembers" ],
  "validDomains": [
    "{{domain-name}}"
  ]
}